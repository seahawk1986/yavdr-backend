[Unit]
Description=yavdr Backend API
After=network-online.target

[Service]
Type=simple
User=yavdr-backend
Group=yavdr-backend

RuntimeDirectory=yavdr-backend
RuntimeDirectoryMode=0755

ExecStart=/usr/bin/run-yavdr-backend
Restart=on-failure

Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
